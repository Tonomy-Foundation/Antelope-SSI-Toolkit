{
    "name": "@tonomy/antelope-ssi-toolkit",
    "author": "Jack Tanner",
    "version": "1.0.3",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "contributors": [
        "Jack Tanner <jack@tonomy.foundation>",
        "Rebal Alhaqash <rebal@tonomy.foundation>"
    ],
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "module": "dist/antelope-ssi-toolkit.esm.js",
    "size-limit": [
        {
            "path": "dist/antelope-ssi-toolkit.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/antelope-ssi-toolkit.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/jest": "^25.2.3",
        "@types/node-fetch": "^2.6.2",
        "ethr-did": "^2.3.0",
        "husky": "^8.0.1",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "@greymass/eosio": "^0.6.4",
        "@tonomy/antelope-did": "^0.1.5",
        "@tonomy/did-jwt": "^6.10.0",
        "@tonomy/did-jwt-vc": "^3.1.3",
        "@tonomy/did-resolver": "^4.0.4",
        "cross-fetch": "^3.1.5"
    }
}
